<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:orientation="horizontal"
    android:padding="5sp">

    <ImageView
        android:id="@+id/userIcon"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="銀澪"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/screenName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＠user"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/nowDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017年11月12日3時45分13秒"
                android:textAlignment="viewEnd"
                android:textSize="9sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tweet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tweet"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/viewImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/retweet"
                android:layout_width="12sp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/retweeted" />

            <TextView
                android:id="@+id/rt_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="12sp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/favorited" />

            <TextView
                android:id="@+id/fav_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <TextView
                android:id="@+id/viaName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="via AngeVierge"
                android:textAlignment="viewEnd"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>